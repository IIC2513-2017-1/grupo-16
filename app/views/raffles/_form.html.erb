<%= form_for(@raffle) do |f| %>
  <% if @raffle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@raffle.errors.count, "error") %> prohibited this raffle from being saved:</h2>

      <ul>
      <% @raffle.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="new-raffle-form">
    <div class="field">
      <%= f.label :name, "Nombre:" %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :prize, "Premio:" %>
      <%= f.text_field :prize %>
    </div>

    <div class="field">
      <%= f.label :image, "Imagen:" %>
      <%= f.file_field :image, accept: 'image/png,image/gif,image/jpeg' %>
    </div>

    <div class="field">
      <%= f.label :price, "Precio:" %>
      <%= f.number_field :price, min: 0 %>
    </div>

    <div class="field">
      <%= f.label :finish_date, "Fecha de término:" %>
      <%= f.datetime_select :finish_date %>
    </div>

    <div class="field">
      <%= f.label :max_number, "Número de rifas a vender:" %>
      <%= f.number_field :max_number, min: 1 %>
    </div>

    <div class="actions">
      <%= f.submit "Crear" %>
    </div>
  </div>
<% end %>
