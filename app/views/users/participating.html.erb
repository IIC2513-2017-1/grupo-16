
<div class="container">
  <div class="left-column">
    <h1>Rifas Compradas</h1>
    <ol class="no-list">
    <% @user.participates.group_by{ |part| part.raffle_id }.keys.each do |p| %>
    	<li>
    		<% r = Raffle.find(p) %>
    		<%= link_to r.name, raffle_path(r.id), method: :get, data: {}, remote: true, :class => "raffle-link" %>
    	</li>
    <% end %>
	</ol>
  </div>
  <div class="right-column">
    <h1>Detalle</h1>
    <h2 id="raffle-placeholder">Selecciona una rifa</h2>
    <div class="raffle-name"></div>
		<div class="raffle-img"></div>
		<div class="author-info">
			<span class="raffle-author-name"></span>
			<span class="raffle-author-email"></span>
		</div>
		<div class="timestamp"></div>
		<div class="prize"></div>
		<div class="price"></div>
		<div class="remaining_numbers"></div>
		<div class="finish-date"></div>
		<div class="numbers-bought">
			<h5 class="numbers-bought-title"></h5>
			<ul class="bought"></ul>
		</div>
		<div class="numbers-bought">
			<h5 class="numbers-confirmed-title"></h5>
			<ul class="confirmed-numbers"></ul>
		</div>
		<div class="rifapp-actions"></div>
  </div>
</div>